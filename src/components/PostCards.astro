---
import type { CollectionEntry } from "astro:content";
import Card from "fulldev-ui/components/Card.astro";

interface Props {
  posts: CollectionEntry<"tutorials">[];
}

const { posts } = Astro.props;
---
{posts.map((post) => (
    <Card
        class="my-space-5"
        frame='panel'
        heading={post.data.title}
        level={2}
        tagline={new Date(post.data.publishDate).toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' })}
        description={post.data.description}
        href={`/blogs/tutorials/${post.slug}`}
        badges={post.data.tags}
    />
))}
